@model BooksLp.ViewModels.BookAutherViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookAutherViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <input asp-for="BookId" readonly class="form-control" />
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" name="File" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                <img src="~/Uploads/@Model.ImageUrl" style="width:180px " class="img-thumbnail" />

                @*<input type="hidden" asp-for="ImageUrl" class="form-control" />*@

            </div>
            <input type="hidden" asp-for="ImageUrl" class="form-control" />


            <div class="form-group">
                <label asp-for="AutherId" class="control-label"></label>
                <select asp-for="AutherId" class="form-control" asp-items="@(new SelectList(Model.Authers, "Id", "Name" ))"></select>
                <span asp-validation-for="AutherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_validation" />
}
